

<div class="container">
  <h1 class="text-center">Trails in the region</h1>
</div>

<div id="map">
</div>
<script>
  const markerCoords = <%- JSON.stringify(trailsMap) %>
</script>
<script src="/js/app.js"></script>

<br>

<% trails.trails.forEach( function(trail) {%>
    <div class="container-fluid">
      <a href="/trail/<%= trail.id %>"><h3><%= trail.name %></h3></a>
      <h5><%= trail.summary %></h5> <br>
      <% if(!currentUser) { %>
        <h6>Signup or login to save to favorites</h6>
      <% } else { %>
        <form method="POST" action="/favorites">
          <input hidden type="text" name="name" value="<%= trail.name %>">
          <input hidden type="text" name="lat" value="<%= trail.latitude %>">
          <input hidden type="text" name="lon" value="<%= trail.longitude %>">
          <input hidden type="text" name="number" value="<%= trail.id %>">
          <button class="btn btn-primary" type="submit">Add to Favorites</button>
        </form>
      <% } %>

        
    </div>
<% }); %>